@page
@model MiniatureWebApp.Pages.PowerStations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Bootstrap 101 Template</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://cdn.jsdelivr.net/npm/html5shiv@3.7.3/dist/html5shiv.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/respond.js@1.4.2/dest/respond.min.js"></script>
    <![endif]-->
</head>


<h1>Power Station Edit</h1>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PowerStation.Id" />
            <div class="form-group">
                <label asp-for="PowerStation.Name" class="control-label"></label>
                <input asp-for="PowerStation.Name" class="form-control" />
                <span asp-validation-for="PowerStation.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PowerStation.Latitude" class="control-label"></label>
                <input asp-for="PowerStation.Latitude" class="form-control" />
                <span asp-validation-for="PowerStation.Latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PowerStation.Longitude" class="control-label"></label>
                <input asp-for="PowerStation.Longitude" class="form-control" />
                <span asp-validation-for="PowerStation.Longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PowerStation.PhoneNumber" class="control-label"></label>
                <input asp-for="PowerStation.PhoneNumber" class="form-control" />
                <span asp-validation-for="PowerStation.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PowerStation.Address" class="control-label"></label>
                <input asp-for="PowerStation.Address" class="form-control" />
                <span asp-validation-for="PowerStation.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>

    <link rel="stylesheet" type="text/css" href="./style.css" />
    <script type="module" src="~/js/Map.js"></script>

    <body>
        <!--The div element for the map -->
        <div id="map" latitude=@Html.DisplayFor(model => model.PowerStation.Latitude) longitude=@Html.DisplayFor(model => model.PowerStation.Longitude)></div>

        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC_b0lFls_Ll_tbk4ftrvHA0msoFQrFI9c&callback=initMap&v=weekly"
                defer></script>
    </body>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
